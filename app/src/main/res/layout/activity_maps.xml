<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MapsActivity">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="28dp"
                tools:context=".MapsActivity">

                <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="340dp"
                    tools:context=".MapsActivity" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="296dp"
                    android:id="@+id/transparent_view" />

                <ImageButton
                    android:id="@+id/ibtn_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/card_view"
                    android:layout_marginTop="260dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="56dp"
                    android:background="@drawable/asset6hdpi"
                    android:contentDescription="@string/floating_phone"
                    android:elevation="20dp" />

                <LinearLayout
                    android:id="@+id/card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="290dp"
                    android:background="@color/white"
                    android:elevation="1dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="16dp">

                    <TextView
                        android:id="@+id/track_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="@string/track_details"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="16dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_mypic"
                            android:contentDescription="@string/display_picture" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingStart="16dp"
                            android:paddingEnd="4dp">

                            <TextView
                                android:id="@+id/tv_mekvahan"
                                android:layout_marginTop="16dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="@string/mekvahan"
                                android:textColor="@color/black"
                                android:textScaleX="1.2"
                                android:textSize="12sp" />

                            <RatingBar
                                android:id="@+id/rating_bar"
                                style="@style/Widget.AppCompat.RatingBar.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:isIndicator="false"
                                android:stepSize="1"
                                android:numStars="5" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:background="@color/line_colour"
                        android:paddingVertical="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:paddingStart="4dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="4dp"
                        android:textColor="@color/offwhite_01"
                        android:text="@string/order_id"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_orderid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:paddingStart="4dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="16dp"
                        android:text="@string/dummy_orderid"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:background="@color/line_colour"
                        android:paddingVertical="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:paddingStart="4dp"
                        android:paddingTop="16dp"
                        android:textColor="@color/offwhite_01"
                        android:paddingBottom="4dp"
                        android:text="@string/service_centre"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_servicecentre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:paddingStart="4dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="16dp"
                        android:text="@string/dummy_servicecentre"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
