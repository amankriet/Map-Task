                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/lv1"
                            android:layout_marginTop="32dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="6"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:layout_weight="2"
                                    android:text="@string/_02_10_am"
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:gravity="center|start"
                                    android:layout_weight="4"
                                    android:paddingStart="32dp"
                                    android:text="@string/your_order_has_been_confirmed"
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />
                            </LinearLayout>
                            <TextView
                                android:layout_width="82dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_semibold"
                                android:paddingTop="4dp"
                                android:textColor="@color/offwhite_01"
                                android:text="@string/_12_07_18"
                                android:textSize="12sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:layout_marginTop="16dp"
                                android:background="@color/line_colour" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lv3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/lv2"
                            android:layout_marginTop="32dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="6"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:layout_weight="2"
                                    android:text="@string/_02_10_am"
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:gravity="center|start"
                                    android:layout_weight="4"
                                    android:paddingStart="32dp"
                                    android:text="@string/we_are_on_the_way_to_pickup_your_vehicle"
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />
                            </LinearLayout>
                            <TextView
                                android:layout_width="82dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_semibold"
                                android:paddingTop="4dp"
                                android:text="@string/_12_07_18"
                                android:textColor="@color/offwhite_01"
                                android:textSize="12sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:layout_marginTop="16dp"
                                android:background="@color/line_colour" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lv4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/lv3"
                            android:layout_marginTop="32dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="6"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:layout_weight="2"
                                    android:text="@string/_02_10_am"
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:gravity="center|start"
                                    android:layout_weight="4"
                                    android:paddingStart="32dp"
                                    android:text="@string/vehicle_picked_up"
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />
                            </LinearLayout>
                            <TextView
                                android:layout_width="82dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_semibold"
                                android:textColor="@color/offwhite_01"
                                android:paddingTop="4dp"
                                android:text="@string/_12_07_18"
                                android:textSize="12sp" />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:layout_marginTop="16dp"
                                android:background="@color/line_colour" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lv5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/lv4"
                            android:layout_marginTop="32dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="6"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:layout_weight="2"
                                    android:text="@string/_02_10_am"
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:gravity="center|start"
                                    android:layout_weight="4"
                                    android:paddingStart="32dp"
                                    android:text="@string/vehicle_servicing_in_progress"
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />

                            </LinearLayout>
                            <TextView
                                android:layout_width="82dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_semibold"
                                android:paddingTop="4dp"
                                android:textColor="@color/offwhite_01"
                                android:text="@string/_12_07_18"
                                android:textSize="12sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:layout_marginTop="16dp"
                                android:background="@color/line_colour" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lv6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/lv5"
                            android:layout_marginTop="32dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="6"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:layout_weight="2"
                                    android:text="@string/_02_10_am"
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:gravity="center|start"
                                    android:layout_weight="4"
                                    android:paddingStart="32dp"
                                    android:text="@string/servicing_of_your_vehicle_is_complete"
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />
                            </LinearLayout>
                            <TextView
                                android:layout_width="82dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_semibold"
                                android:paddingTop="4dp"
                                android:text="@string/_12_07_18"
                                android:textColor="@color/offwhite_01"
                                android:textSize="12sp" />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:layout_marginTop="16dp"
                                android:background="@color/line_colour" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lv7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/lv6"
                            android:layout_marginTop="32dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="6"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:layout_weight="2"
                                    android:text="@string/_02_10_am"
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:gravity="center|start"
                                    android:layout_weight="4"
                                    android:text="@string/vehicle_dropped"
                                    android:paddingStart="32dp"
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />
                            </LinearLayout>
                            <TextView
                                android:layout_width="82dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_semibold"
                                android:paddingTop="4dp"
                                android:textColor="@color/offwhite_01"
                                android:text="@string/_12_07_18"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv1"
                            android:layout_marginTop="32dp"
                            android:layout_marginStart="72dp"
                            android:gravity="center">
                            <ImageView
                                android:contentDescription="@string/colourless"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="572dp"
                                android:src="@drawable/ic_asset_1" />
                            <ImageView
                                android:id="@+id/img_up"
                                android:contentDescription="@string/coloured"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="2dp"
                                android:layout_width="wrap_content"
                                android:scaleType="fitXY"
                                android:layout_height="572dp"
                                android:src="@drawable/clip_source" />

                            <!--<ProgressBar-->
                                <!--android:id="@+id/img_up"-->
                                <!--android:layout_width="28dp"-->
                                <!--android:layout_height="522dp"-->
                                <!--android:layoutDirection="inherit"-->
                                <!--style="?android:attr/progressBarStyleHorizontal"-->
                                <!--android:rotation="90"-->
                                <!--android:layout_centerHorizontal="true"-->
                                <!--android:contentDescription="@string/coloured"-->
                                <!--/>-->

                        </RelativeLayout>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/card_view4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
